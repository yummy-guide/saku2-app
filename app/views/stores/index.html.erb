<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Stores" %>

  <div class="flex justify-between items-center">
    <h1 class="font-bold text-4xl">Stores</h1>
    <% if Current.user&.admin? %>
      <%= link_to "New store", new_store_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <% end %>
  </div>

  <div id="stores" class="min-w-full">
    <% @stores.each do |store| %>
      <%= render store %>
      <p>
        <%= link_to "Show this store", store, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
      </p>
    <% end %>
  </div>
</div>
