<div class="max-w-min mx-auto">
  <% if notice.present? %>
    <p class="bg-green-50 mb-5 text-green-500 font-medium rounded-lg inline-block" id="notice"><%= notice %></p>
  <% end %>

  <% content_for :title, "Stores" %>

  <div class="flex justify-between items-center mb-4">
    <h1 class="font-bold text-4xl">Available list</h1>
    <% if Current.user&.admin? %>
      <%= link_to "New store", new_store_path, class: "rounded-lg py-3 px-5 bg-blue-600 text-white block font-medium" %>
    <% end %>
  </div>

  <div id="stores" class="min-w-full flex flex-col justify-center items-center">
    <% @stores.each do |store| %>
      <div class="w-full">
        <%= render store %>
      </div>
    <% end %>
  </div>
</div>
